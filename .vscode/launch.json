    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Solution",
            "program": "${workspaceFolder}/src/msbuild-project-organizer/bin/Debug/netcoreapp3.1/CSProjOrganizer.dll",
            "args": [
                "--input=testfile.xml",
                //"--output=testfile.sorted.xml",
                "--config=testfile-config.json"
            ],
            "cwd": "${workspaceFolder}/src/msbuild-project-organizer",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}