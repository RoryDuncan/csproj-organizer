{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solution",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Application",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "CSProjOrganizer/CSProjOrganizer.csproj"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Dogfood",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "CSProjOrganizer.dll",
                "--filename",
                "${workspaceFolder}/CSProjOrganizer/CSProjOrganizer.csproj"
            ],
            "options": {
                "cwd": "${workspaceFolder}/CSProjOrganizer/bin/Debug/netcoreapp3.1"
            },
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Solution",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Format All C#",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "format",
                "."
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Tests",
            "command": "dotnet",
            "type": "shell",
            "dependsOn": ["Build Solution"],
            "args": [
                "test"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Sample File",
            "command": "dotnet",
            "type": "shell",
            "dependsOn": ["Build Solution"],
            "options": {
                "cwd": "${workspaceFolder}/CSProjOrganizer"
            },
            "args": [
                "run",
                "--",
                "--filename",
                "testfile.xml"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}