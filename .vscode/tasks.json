{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solution",
            "detail": "Builds 'msbuild-project-organizer' and 'msbuild-project-organizer.tests' projects",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "--nologo",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Project",
            "detail": "Builds the msbuild-project-organizer project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "--nologo"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/msbuild-project-organizer"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Package",
            "detail": "Build, publishes, and packages the application as a nupkg",
            "command": "dotnet",
            "type": "shell",
            "dependsOn": ["Build Solution", "Publish"],
            "dependsOrder": "sequence",
            "args": [
                "pack",
                "--no-build",
                "--nologo"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "detail": "Build and prepares the project for packaging",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "--nologo"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Application",
            "detail": "Performs 'dotnet run' on the currently built project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/msbuild-project-organizer"
            },
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "msbuild-project-organizer/msbuild-project-organizer.csproj"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Dogfood",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "CSProjOrganizer.dll",
                "--input",
                "${workspaceFolder}/src/msbuild-project-organizer/msbuild-project-organizer.csproj"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/msbuild-project-organizer/bin/Debug/netcoreapp3.1"
            },
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Solution",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Format All C#",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "format",
                "."
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Tests",
            "command": "dotnet",
            "type": "shell",
            "dependsOn": ["Build Solution"],
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Sample File",
            "command": "dotnet",
            "type": "shell",
            "dependsOn": ["Build Solution"],
            "options": {
                "cwd": "${workspaceFolder}/src/msbuild-project-organizer"
            },
            "args": [
                "run",
                "--",
                "--input",
                "testfile.xml"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}